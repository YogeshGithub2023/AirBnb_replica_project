<!-- we removed Head HTML part as we created header part file for every link in same website -->
<!-- instead of Header part we use here boilerplate code which we created a dedicated file for header -->
<% layout("/Layouts/Boilerplate_html_template.ejs") %>

<div class="row mt-3"> <!-- this mt-3 is bootstrap class, which is add by default mirgin top-->
    <div class="col-8 offset-2">

        <!-- <br><br> -->
        <h3>Create a New Listing</h3>

        <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

            <!-- Title Div -->
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <!-- Created lisitng with object field or object's key -->
                <input name="listing[title]" placeholder="eg. Add a catchy title" type="text" class="form-control" required>

                <div class="valid-feedback">Title Looks Good!</div>
            </div>
            
            <!-- Description Div -->
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" class="form-control" required></textarea>

                <div class="invalid-feedback">Please enter a short description</div>
            </div>
            
            <!-- Image Div 1 using URL-->
            <!-- <div class="mb-3">
                <label for="image" class="form-label">Image Link</label>
                <input name="listing[image]" placeholder="enter image URL/Link" type="text" class="form-control">
            </div> -->

            <!-- Image Div 2 using upload image-->
            <div class="mb-3">
                <label for="image" class="form-label">Upload Listing Image</label>
                <input name="listing[image]" type="file" class="form-control">
                required
            </div>
            
            <div class="row">

                <!-- Price Div -->
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>

                    <!-- Here we removed:- type="number" -->
                    <input name="listing[price]" placeholder="eg. 1200" class="form-control" required>

                    <div class="invalid-feedback">Price should be valid</div>
                </div>

                <!-- Country name Div -->
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" placeholder="eg. India-Bharat-Hindustan" type="text" class="form-control" required>

                    <div class="invalid-feedback">Country name should be valid</div>
                </div>
            </div>
            
            <!-- Location Div -->
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" placeholder="eg. New Delhi, India" type="text" class="form-control" required>

                <div class="invalid-feedback">Location should be valid</div>
            </div>

            <button class="btn btn-dark add-btn mt-3">Add</button>
            
        </form>
    </div>
</div>
